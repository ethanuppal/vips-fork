module PcPlus4 (
    i_clk  : input  clock    ,
    i_reset: input  logic    ,
    o_pc   : output logic<32>,
) {
    var pc: logic<32>;

    always_ff {
        pc = if i_reset { 0 } else { pc + 4 };
    }
    assign o_pc = pc;
}

#[test(pcplus4)]
embed (inline) sv{{{
    module test;
        logic clk;
        logic reset;
        logic [31:0] pc;
       
        adder_PcPlus4 pcplus4 (clk, reset, pc);

        initial begin
            reset = 1;
            assert (pc == 0) else $error("reset");

            clk = 0; #10 clk = 1; #10;
            assert (pc == 0) else $error("0");

            reset = 0;
            clk = 0; #10 clk = 1; #10;
            assert (pc == 4) else $error("4");

            clk = 0; #10 clk = 1; #10;
            assert (pc == 8) else $error("0");

            clk = 0; #10 clk = 1; #10;
            assert (pc == 12) else $error("0");

            $finish;
        end
    endmodule
}}}
